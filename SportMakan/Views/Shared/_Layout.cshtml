          href="https://cdn.rtlcss.com/bootstrap/v4.5.3/css/bootstrap.min.css"
          integrity="sha384-JvExCACAZcHNJEc7156QaHXTnQL3hQBixvj5RV5buE7vgnNEzzskDtx9NQ4p6BJe"
          crossorigin="anonymous" />
    }*@
</head>
<style>
    .navbar {
        background: #0077b6;
        background: linear-gradient(to right, #0077b6, #023e8a);
    }

    .navbar-nav li a {
        color: #fff;
        font-weight: bold;
        text-transform: uppercase;
        text-decoration: none;
        padding: 10px;
        transition: all 0.3s ease;
    }

        .navbar-nav li a:hover {
            background-color: #fff;
            color: #0077b6;
            border-radius: 5px;
        }

  
        #navbartoggler ul{
            display: flex;
            font-size: small;
        }
    

    ul {
        list-style: none;
        z-index:1003;
    }

    li {
        position: relative; /* make the li element a positioning context for the sub dropdown */
    }

    #sub-dropdown {
        font-size: small;
        background-color: black;
        display: none;
        position: absolute;
        border-radius: 4px;
        top: 100%;
        left: 0;
        opacity: 0;
        transition: opacity 0.2s ease-in-out;
        box-sizing: border-box;
        padding: 0px;
        width: 200px;
    }

    li:hover #sub-dropdown {
        display: block;
        opacity: 1; /* show the sub dropdown gradually with a delay */
    }

    ul:hover #sub-dropdown {
        display: grid;
    }
</style>
<body>
    <header>
        <nav  class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div id="navbartoggler" style="margin-top: 13px;" class="container-fluid d-flex justify-content-between">
                <div class="d-flex justify-content-center align-items-center">
                    @*<img src="~/img/logo.png" asp-area="" asp-controller="Home" asp-action="Index">*@
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">@localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a style="cursor:pointer;" class="nav-link text-light" >@localizer["Videos"]</a>
                            <div id="sub-dropdown">
                                <partial name="_SubDropdawnPV"/>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="GetGamesList">@localizer["Games"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="AboutUs">@localizer["About"]</a>
                        </li>
@*                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>*@
@*                        <li class="nav-item">
                            <partial name="_SelectLangaugePV" />
                        </li>*@
                    </ul>
                </div>
            </div>
            <div id="navbartoggler" style="float:right; margin: 11px 23px;" class="d-flex justify-content-end align-items-center">
                <partial name="_LoginPartial" />
            </div>
            <div id="navbartoggler" style="margin: 11px 23px;" class="d-flex justify-content-end align-items-center">
                <partial name="_SelectLangaugePV" />
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ul>
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        <div class="col-md-12">
            @localizer["Footer"] <a asp-area="" asp-controller="Home" asp-action="AboutUs">@localizer["About"]</a>
        </div>
    </footer>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="~/lib/jquery/dist/vendor/jquery-1.11.2.min.js"><\/script>')</script>
    <script src="~/lib/jquery/dist/vendor/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/plugins.js"></script>
    <script src="~/lib/jquery/dist/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
